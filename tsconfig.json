{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["esnext", "dom", "WebWorker"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "inlineSourceMap": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "strict": true,
    "jsx": "react",
    "jsxFactory": "h",
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["src/**/*", "server/**/*", "test/**/*"]
}
